<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:alignment="center"
    ohos:orientation="vertical">

    <Button
        ohos:id="$+id:btn_get"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#66ff00ff"
        ohos:top_padding="20vp"
        ohos:bottom_padding="20vp"
        ohos:text_size="22fp"
        ohos:text="send get request"/>
    <Button
        ohos:id="$+id:btn_post"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#6600ffff"
        ohos:top_padding="20vp"
        ohos:bottom_padding="20vp"
        ohos:text_size="22fp"
        ohos:text="send post request"/>
    <Button
        ohos:id="$+id:btn_down"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#6600ff"
        ohos:top_padding="20vp"
        ohos:bottom_padding="20vp"
        ohos:text_size="22fp"
        ohos:text="send download request"/>
    <Button
        ohos:id="$+id:btn_upload"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:background_element="#66fff000"
        ohos:top_padding="20vp"
        ohos:bottom_padding="20vp"
        ohos:text_size="22fp"
        ohos:text="send upload request"/>

    <Text
        ohos:id="$+id:txt_result"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:background_element="$graphic:background_ability_main"
        ohos:layout_alignment="horizontal_center"
        ohos:multiple_lines="true"
        ohos:scrollable="true"
        ohos:padding="20vp"
        ohos:text="$string:mainability_HelloWorld"
        ohos:text_size="18fp"/>

</DirectionalLayout>